generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum GastoType {
  ALIMENTACION
  TRANSPORTE
  OCIO
}

model Gasto {
  id        Int     @id @default(autoincrement())
  user   User @relation(fields: [usuarioId], references: [id])
  usuarioId Int     
  monto     Int     // Nuevo campo para almacenar el monto del gasto
  tipo GastoType // Nuevo campo para almacenar el tipo de gasto
  creationDate DateTime @default(now())
}

model User {
  id              Int      @id @default(autoincrement())
  name            String
  money  Int
  gastos          Gasto[]  // Relaci√≥n uno a muchos con la tabla Gasto
}





